<% content_for :title do %>GDG Managua<% end %>
<% content_for :description do %>GDG Managua # Event<% end %>
<section class="header-section">
  <div class="container-fluid">
    <%= image_tag("background-material.png", :alt => "background", :class => "img-responsive") %>
    <div class="hello">
      <span>Hola, gracias por visitarnos!</span>
      <hr/>
      <a href="#inscription"><span>Puedes registrarte aqui, si aun no lo has hecho</span></a>
      <br/><br/>
      <a href="#event"><span>Puedes ver la informacion de este evento</span></a>
    </div>
  </div>
</section>

<section id="inscription">
  <div class="container">
    <div class="row">
      <div class="col-md-12 well bs-component">
        <%= simple_form_for @visitor do |f| %>
          <fieldset>
            <legend>Inscripcion</legend>
            <%= f.error_notification %>
            <div class="form-group">
              <label for="visitor_email" class="col-lg-2 control-label">Email</label>
              <div class="col-lg-10">
                <%= f.input :email, label: false, :class => "form-control", :placeholder => 'Email' %>
              </div>
            </div>
            <div class="form-group">
              <label for="visitor_f_name" class="col-lg-2 control-label">First Name</label>
              <div class="col-lg-10">
                <%= f.input :f_name, label: false, :class => "form-control", :placeholder => 'First Name' %>
              </div>
            </div>
            <div class="form-group">
              <label for="visitor_l_name" class="col-lg-2 control-label">Last Name</label>
              <div class="col-lg-10">
                <%= f.input :l_name, label: false, :class => "form-control", :placeholder => 'Last Name' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= f.button :submit, "Deseo asistir", :class => "btn btn-primary" %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section id="event">
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-12">
        <h3>Speakers</h3>
        <div class="list-group">

          <% @speakers.each do |speaker| %>
            <div class="list-group-item">
              <div class="row-picture">
                <%= image_tag("gdg-icon.jpg", :alt => "gdg-icon") %>
              </div>
              <div class="row-content">
                <h4 class="list-group-item-heading"><%= speaker.name %></h4>
                <p class="list-group-item-text"><%= speaker.bio %></p>
              </div>
            </div>
             <div class="list-group-separator"></div>
          <% end %>    

        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-12">
        <h3>Charlas</h3>
        <div class="list-group">
          
          <% @talks.each do |talk| %>
            <div class="list-group-item">
              <div class="row-picture">
                <%= image_tag("gdg-icon.jpg", :alt => "gdg-icon") %>
              </div>
              <div class="row-content">
                <h4 class="list-group-item-heading"><%= talk.title %> by <%= talk.speaker.name %></h4>
                <p class="list-group-item-text"><%= talk.description %></p>
              </div>
            </div>
            <div class="list-group-separator"></div>
          <% end %>  

        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-12">
        <h3>Place: <%= @last_place.name %> </h3>
        <h4><%= @last_place.description %></h4>
        <div id="map-container" style="width:auto; height: 400px;"></div>
      </div>
    </div>
  </div>
</section>
