<% content_for :title do %>GDG Managua<% end %>
<% content_for :description do %>GDG Managua # Event<% end %>
<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Hola, si llegaste aqui es por que deseas asistir a la # reunion del GDG Managua</h2>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-md-offset-2 well bs-component">
        <%= simple_form_for @visitor do |f| %>
          <fieldset>
            <legend>Inscripcion</legend>
            <%= f.error_notification %>
            <div class="form-group">
              <label for="visitor_email" class="col-lg-2 control-label">Email</label>
              <div class="col-lg-10">
                <%= f.input :email, label: false, :class => "form-control", :placeholder => 'Email' %>
              </div>
            </div>
            <div class="form-group">
              <label for="visitor_f_name" class="col-lg-2 control-label">First Name</label>
              <div class="col-lg-10">
                <%= f.input :f_name, label: false, :class => "form-control", :placeholder => 'First Name' %>
              </div>
            </div>
            <div class="form-group">
              <label for="visitor_l_name" class="col-lg-2 control-label">Last Name</label>
              <div class="col-lg-10">
                <%= f.input :l_name, label: false, :class => "form-control", :placeholder => 'Last Name' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <%= f.button :submit, "Deseo asistir", :class => "btn btn-primary" %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-12">
        <h3>Speakers</h3>
        <div class="list-group">
          <div class="list-group-item">
              <div class="row-picture">
                  <img class="circle" src="http://lorempixel.com/56/56/people/1" alt="icon">
              </div>
              <div class="row-content">
                  <h4 class="list-group-item-heading">Tile with avatar</h4>
                  <p class="list-group-item-text">Donec id elit non mi porta gravida at eget metus</p>
              </div>
          </div>
          <div class="list-group-separator"></div>
          <div class="list-group-item">
              <div class="row-picture">
                  <img class="circle" src="http://lorempixel.com/56/56/people/6" alt="icon">
              </div>
              <div class="row-content">
                  <h4 class="list-group-item-heading">Tile with another avatar</h4>
                  <p class="list-group-item-text">Maecenas sed diam eget risus varius blandit.</p>
              </div>
          </div>
          <div class="list-group-separator"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container jumbotron">
    <div class="row">
      <div class="col-md-12">
        <h3>Place</h3>
        <div id="map-container" style="width:auto; height: 400px;"></div>
      </div>
    </div>
  </div>
</div>
</section>
